# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# FRONTEND


#BACKEND

# -- Users --
POST    /users                      controllers.UserController.createUser
POST    /users/login     controllers.UserController.getUser


# -- Lots --
POST    /lots                       controllers.LotController.createLot
GET     /lots                       controllers.LotController.getAllLots

# -- Reservations --
POST    /reservations               controllers.ReservationController.createReservation
GET     /reservations/:id          controllers.ReservationController.getReservation(id: Int)
GET     /reservations              controllers.ReservationController.getAllReservations

# An example controller showing a sample home page
# GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
